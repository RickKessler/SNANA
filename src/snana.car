     &     SIMVAR_CUTWIN_STRING(1:LWD)//char(0), LWD) 

      DO i = 1, NWD, 3
         NTMP = NTMP + 1
         CALL get_PARSE_WORD_fortran(i+0, ctmp1, LWD)
