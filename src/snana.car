      CUTWIN_TMP(2)  = CUTWIN_PHOTPROB(2)
      CUTVARNAME     = 'PHOTPROB' // char(0)
      CALL write_epoch_list_addvar(CUTVARNAME, CUTWIN_TMP, CUTMODE,
     &     20, 12)
      
