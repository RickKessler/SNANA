      CUTWIN_TMP(2)  = CUTWIN_ZP(2)
      CUTVARNAME     = 'ZP' // char(0)
      CALL write_epoch_list_addvar(CUTVARNAME, CUTWIN_TMP, CUTMODE,
     &     20, 12)
      
