      DO iver = 1, N_VERSION
         VERSION_ORIG = VERSION_PHOTOMETRY(iver)
         jslash  = INDEX(VERSION_ORIG,'/')
         LENV    = INDEX(VERSION_ORIG,' ') - 1
	 IF ( jslash > 0 ) THEN
            folder  = VERSION_ORIG(1:jslash-1)
