      print*,' INIT_CUTMASK: CUTMASK8_MJD_ALL = ',CUTMASK8_MJD_ALL

c - - - - - - - - -  -
c July 11 2020: 
c  check option to write list of rejected epochs 
c   (e.g., to pass to classifier)

      CALL WRITE_EPOCH_IGNORE_INIT()

      RETURN
      END  ! end INIT_CUTMASK

