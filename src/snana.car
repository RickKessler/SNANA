      LEN = INDEX(OUT_EPOCH_IGNORE_FILE,' ') - 1
      if ( LEN <= 0 ) RETURN

      CALL write_epoch_list_init(
     &     OUT_EPOCH_IGNORE_FILE(1:LEN)//char(0), LEN+1)

