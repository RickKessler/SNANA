      KEY    = PREFIX(1:LENPRE)//'_LOGsSFR' ;   
      CALL FETCH_SNDATA_WRAPPER(KEY, ONE, STRING, DARRAY, OPT)
      SNHOST_LOGsSFR(igal)     = SNGL(DARRAY(1))

