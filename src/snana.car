+CDE,SNLCINP.

      INTEGER LEN
      REAL*8  CUTWIN_TMP(2)
      CHARACTER CUTMODE*12, CUTVARNAME*20
      EXTERNAL write_epoch_list_init, write_epoch_list_addvar

