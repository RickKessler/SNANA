      FUDGE_FLUXERR_SCALE  = ''
      FUDGE_MAG_ERROR      = ''
      FUDGE_MAG_COVERR     = ''
      FUDGE_HOSTNOISE_FILE = ''
      FLUXERRMODEL_FILE    = ''
      SIM_FLUXERRMODEL_FILE = ''
      FLUXERRMODEL_OPTMASK = 0 
