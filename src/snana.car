      IF ( SNHOST_DDLR(igal) > 0.0 )  EXIST_SNHOST_DDLR = .TRUE.

c - - - - - - - - - - - -  -

      KEY    = PREFIX(1:LENPRE)//'_LOGMASS' ;   
