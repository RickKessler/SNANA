cc      print*,' xxx OPT, NVAR_PRIVATE = ', OPT, NVAR_PRIVATE

      IF ( NVAR_PRIVATE .LE. 0 ) RETURN

      IF( NVAR_PRIVATE > MXVAR_PRIVATE ) THEN
