     &    ONE, STRING, DARRAY, OPT)
      SIM_TEMPLATE_INDEX = INT(DARRAY(1))

      CALL FETCH_SNDATA_WRAPPER("SIM_SUBSAMPLE_INDEX",  
     &    ONE, STRING, DARRAY, OPT)
