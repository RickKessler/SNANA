c Dec 2018
c Parse &SNLCINP input SIMVAR_CUTWIN_STRING

+CDE,SNDATCOM.
+CDE,SNLCINP.

      INTEGER NTMP, i, NWD, LWD
      CHARACTER ctmp1*60, ctmp2*60, ctmp3*60, FNAM*20

